APP_NAME=Laravel
APP_ENV=testing
APP_KEY=base64:dummyKeyForExample=
APP_DEBUG=true
APP_URL=http://localhost

LOG_CHANNEL=stack
LOG_LEVEL=debug

# テスト用DB（実際の値は各環境で設定）
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=attendance_management_test
DB_USERNAME=root
DB_PASSWORD=

# キャッシュ・セッション・キューはテスト専用に array/sync 推奨
CACHE_DRIVER=array
SESSION_DRIVER=array
QUEUE_CONNECTION=sync

# メールは送らないように array を指定
MAIL_MAILER=array
